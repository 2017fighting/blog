{
  "name": "astro-paper-s",
  "type": "module",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "astro dev --host 0.0.0.0",
    "build": "astro check && astro build && pagefind --site dist && cp -r dist/pagefind public/",
    "build:cf": "npm run build && npm run move-media",
    "install:rclone": "curl -O https://downloads.rclone.org/rclone-current-linux-amd64.zip && unzip rclone-current-linux-amd64.zip",
    "install:rclone-config": "echo $RCLONE_CONFIG_BASE64 | base64 -d > rclone.conf",
    "move-media": "npm run install:rclone && npm run install:rclone-config && RCLONE_CONFIG=./rclone.conf rclone-*-linux-amd64/rclone copy dist/media r2:blog-image && rm -rf dist/media",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint .",
    "spell": "pnpm dlx cspell --config cspell.yaml .",
    "md:check": "pnpm dlx markdownlint-cli2 ./src/data/blog/**",
    "md:fix": "pnpm dlx markdownlint-cli2 --fix ./src/data/blog/**",
    "postinstall": "playwright install chromium"
  },
  "dependencies": {
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.4.0",
    "@beoe/pan-zoom": "^0.0.4",
    "@beoe/rehype-mermaid": "^0.4.2",
    "@expressive-code/plugin-line-numbers": "^0.41.2",
    "@giscus/react": "^3.1.0",
    "@microflash/rehype-figure": "^2.1.4",
    "@resvg/resvg-js": "^2.6.2",
    "@tailwindcss/vite": "^4.1.8",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@ziteh/rehype-img-size-cache": "^0.1.2",
    "@zokki/astro-minify": "^1.1.0",
    "astro": "^5.8.1",
    "astro-compressor": "^1.0.0",
    "astro-expressive-code": "^0.41.2",
    "dayjs": "^1.11.13",
    "katex": "^0.16.22",
    "lodash.kebabcase": "^4.1.1",
    "playwright": "^1.53.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-katex": "^7.0.1",
    "rehype-rewrite": "^4.0.2",
    "rehype-slug": "^6.0.0",
    "rehype-wrap-all": "^1.1.0",
    "remark-math": "^6.0.0",
    "satori": "^0.13.2",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.8"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@pagefind/default-ui": "^1.3.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/lodash.kebabcase": "^4.1.9",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "eslint-plugin-astro": "^1.3.1",
    "globals": "^16.2.0",
    "pagefind": "^1.3.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  },
  "packageManager": "pnpm@10.12.2+sha512.a32540185b964ee30bb4e979e405adc6af59226b438ee4cc19f9e8773667a66d302f5bfee60a39d3cac69e35e4b96e708a71dd002b7e9359c4112a1722ac323f"
}
